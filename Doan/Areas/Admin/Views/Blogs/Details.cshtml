@model Doan.Models.TbBlog

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <h4 class="breadcrumb-title">Blog Details</h4>
            <ul class="db-breadcrumb-list">
                <li><a href="#"><i class="fa fa-home"></i>Home</a></li>
                <li>Details</li>
            </ul>
        </div>
        <div class="row">
            <div class="col-lg-12 m-b30">
                <div class="card widget-box">
                    <div class="card-body">
                        <h4 class="card-title">Blog Details</h4>
                        <hr />
                        <form>
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Title:</label>
                                <div class="col-sm-9">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.Title)</p>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Alias:</label>
                                <div class="col-sm-9">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.Alias)</p>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Description:</label>
                                <div class="col-sm-9">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.Description)</p>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Detail:</label>
                                <div class="col-sm-9">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.Detail)</p>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Image:</label>
                                <div class="col-sm-9">
                                    <p class="form-control-static"><img src="@Model.Image"/></p>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Created Date:</label>
                                <div class="col-sm-9">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.CreatedDate)</p>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Created By:</label>
                                <div class="col-sm-9">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.CreatedBy)</p>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Modified Date:</label>
                                <div class="col-sm-9">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.ModifiedDate)</p>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Modified By:</label>
                                <div class="col-sm-9">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.ModifiedBy)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="IsActive" class="control-label"></label>
                                <div class="custom-control custom-switch">
                                    @Html.CheckBox("IsActive", Model.IsActive, new { @class = "custom-control-input" })
                                    <label class="custom-control-label" for="IsActive"></label>
                                </div>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Account:</label>
                                <div class="col-sm-9">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.Account.AccountId)</p>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Category:</label>
                                <div class="col-sm-9">
                                    <p class="form-control-static">@Html.DisplayFor(model => model.Category.Title)</p>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Edit" asp-route-id="@Model?.BlogId" class="btn green radius-xl outline">Edit</a>
                        <a asp-action="Index" class="btn red outline radius-xl btn-delete">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
