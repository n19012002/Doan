@model Doan.Models.TbBlog

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Main container start -->
<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <h4 class="breadcrumb-title">Create Blog</h4>
            <ul class="db-breadcrumb-list">
                <li><a href="#"><i class="fa fa-home"></i>Home</a></li>
                <li>Create Blog</li>
            </ul>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Title" class="control-label">Title</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Alias" class="control-label">Alias</label>
                                <input asp-for="Alias" class="form-control" />
                                <span asp-validation-for="Alias" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="CategoryId" class="control-label">Category</label>
                                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label">Description</label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Detail" class="control-label">Detail</label>
                                <textarea asp-for="Detail" class="form-control summernote" rows="4"></textarea>
                                <span asp-validation-for="Detail" class="text-danger"></span>
                            </div>

                            <!-- Add other fields here -->
                        </div>

                        <div class="col-md-6">
                           

                            <div class="from-group">
                                <label class="control-lable">Images</label>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <button class="btn btn-success" type="button" onclick="openDialog()">Choose a pic</button>
                                    </div>
                                    <input type="text" class="form-control" asp-for="Image" id="file_input" aria-describedby="button-addon2">
                                </div>
                            </div>

                            

                            <div class="form-group">
                                <label class="control-label">Is Active:</label>
                                <input type="checkbox" name="IsActive" value="true" />
                                <input type="hidden" name="IsActive" value="false" />
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn green radius-xl outline" />
                        <a asp-action="Index" class="btn red outline radius-xl btn-delete">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
@{
    var summernote = new Doan.Areas.Admin.Models.Summernote("#Detail");

}
<partial name="_Summernote" model="summernote" />